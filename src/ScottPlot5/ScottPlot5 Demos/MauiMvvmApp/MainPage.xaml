<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:originPlots="clr-namespace:ScottPlot.Maui;assembly=ScottPlot.Maui"
             xmlns:plot="clr-namespace:ScottPlot.MauiMvvm;assembly=ScottPlot.MauiMvvm"
             xmlns:vms="clr-namespace:MauiMvvmApp"
             x:DataType="vms:MainPageViewModel"
             x:Class="MauiMvvmApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="{Binding Title}"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Command="{Binding ClickCommand}"
                HorizontalOptions="Fill" />
            <HorizontalStackLayout>
                <plot:MauiMvvmPlot BackgroundColor="Blue" Plot="{Binding MyPlot}" WidthRequest="400" HeightRequest="400">

                </plot:MauiMvvmPlot>
                <originPlots:MauiPlot Background="Red" x:Name="MyOriginPlot"  WidthRequest="400" HeightRequest="400">

                </originPlots:MauiPlot>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
